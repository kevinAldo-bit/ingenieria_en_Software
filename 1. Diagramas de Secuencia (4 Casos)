@startuml Secuencia_Login

actor Usuario
participant Interfaz <<View>>
participant ControladorAutenticacion <<Control>>
database BaseDeDatos <<Storage>>

Usuario -> Interfaz: ingresa(correo, contrase침a)
activate Interfaz
Interfaz -> ControladorAutenticacion: validarCredenciales(correo, contrase침a)
activate ControladorAutenticacion
    ControladorAutenticacion -> BaseDeDatos: buscarUsuario(correo)
    activate BaseDeDatos
    BaseDeDatos --> ControladorAutenticacion: retorna(datosUsuario)
    deactivate BaseDeDatos

    alt Credenciales V치lidas
        ControladorAutenticacion -> Interfaz: accesoExitoso(tipoUsuario)
        Interfaz -> Usuario: mostrar(DashboardPrincipal)
    else Credenciales Inv치lidas
        ControladorAutenticacion -> Interfaz: accesoFallido()
        Interfaz -> Usuario: mostrar(MensajeError)
    end
deactivate ControladorAutenticacion
deactivate Interfaz

@enduml
